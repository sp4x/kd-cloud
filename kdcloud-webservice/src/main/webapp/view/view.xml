		            <lineLabel>First Line</lineLabel>
		            <lineColor>orange</lineColor>
		            <lineWidth>5</lineWidth>
		            <showLine>true</showLine>
		
		            <markerOptions>
		                <style>diamond</style>
		                <color>black</color>
		            </markerOptions>
		            
		           <points>
		               <xIndex>counter</xIndex>
		               <yIndex>0</yIndex>
		           </points>
		        </line>
		
		        <line>
		            <lineLabel>Second Line</lineLabel>
		            <lineWidth>6</lineWidth>
		            <showLine>true</showLine>
		            <lineColor>blue</lineColor>
		
		            <markerOptions>
		                <style>square</style>
		                <color>black</color>
					</markerOptions>
		            
		            <point>
		                <X>2</X>
		                <Y>5</Y>                    
		           </point>
		           <point>
		                <X>3</X>
		                <Y>8</Y>                    
		           </point>
		           <point>
		                <X>1</X>
		                <Y>4</Y>                    
		           </point>    
		        </line>
