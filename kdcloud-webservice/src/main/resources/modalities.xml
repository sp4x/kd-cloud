<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<modalities>
    <modality>
        <name>Data Feed</name>
        <inputSpecification>
            <source>HEARTBEAT</source>
        </inputSpecification>
        <action>
            <uri>/data/london-marathon</uri>
            <method>DELETE</method>
            <repeat>false</repeat>
            <sleepTime>0</sleepTime>
        </action>
        <action>
            <uri>/data/london-marathon</uri>
            <method>PUT</method>
            <repeat>true</repeat>
            <sleepTime>60</sleepTime>
        </action>
    </modality>
    <modality>
        <name>Single Analysis</name>
        <action>
            <uri>/group/london-marathon</uri>
            <method>GET</method>
            <repeat>false</repeat>
            <sleepTime>0</sleepTime>
        </action>
        <action>
            <uri>/workflow/ecg.xml</uri>
            <method>POST</method>
            <postParameter>
                <name>userId</name>
                <reference>//users/user</reference>
            </postParameter>
             <postParameter>
                <name>groupId</name>
                <value>london-marathon</value>
            </postParameter>
            <repeat>true</repeat>
            <sleepTime>60</sleepTime>
        </action>
    </modality>
    <modality>
        <name>Global Analysis</name>
        <action>
            <uri>/global/workflow/ecg.xml</uri>
            <method>POST</method>
             <postParameter>
                <name>groupId</name>
                <value>london-marathon</value>
            </postParameter>
            <repeat>true</repeat>
            <sleepTime>60</sleepTime>
        </action>
    </modality>
</modalities>
